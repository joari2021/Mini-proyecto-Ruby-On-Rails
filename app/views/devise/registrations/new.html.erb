<div class="small-container center-block bg-nav"> 
  <div class="margin-top pt-4 px-5 pb-2">
    <h2 class="text-uppercase text-info font-weight-bold">crear cuenta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, "correo electronico" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "contraseÃ±a" %>
        <% if @minimum_password_length %>
        <em>(minimo <%= @minimum_password_length %> caracteres )</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "confirmar contraseÃ±a" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Continuar", class:"btn btn-primary mt-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>