<div class="small-container center-block bg-nav">
    <div class="margin-top pt-4 px-5 pb-2">
        <h2 class="text-uppercase text-info font-weight-bold">cambiar contraseña</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
            <%= f.label :password, "Nueva contraseña" %><br />
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> Caracteres Minimos)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>

        <div class="field">
            <%= f.label :password_confirmation, "Confirma tu nueva contraseña" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
            <%= f.submit "Guardar", class:"btn btn-primary mt-3" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>